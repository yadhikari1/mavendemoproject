package Two;

public class PracticeArrayday6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

//	String [] name =new String [];     both are same 
//	String names [] = new String []

		// Program 1
		System.out.println("Program 1");

		String[] names = new String[4];
		names[0] = "Ram";
		names[1] = "Syam";
		names[2] = "Sita";
		names[3] = "Radha";

		// array stores the elements by index
		System.out.println(names); // will not print actual results

		System.out.println(names[1]);
		System.out.println(names[2]);

		System.out.println(names.length);

		for (int i = 0; i < names.length; i++) {
			// System.out.println(i);
			System.out.println(names[i]);
		}

// Program 2
		System.out.println(" ");
		System.out.println("program 2");

		String[] cities = { "Ilam", "Fikkal", "Harkate", "kanyam" };

		System.out.println(cities[0]);

		for (int i = 0; i < cities.length; i++) {
			System.out.println(cities[i]);
		}

		// Program 3

		System.out.println("program 3");

		int[] numbers = { 10, 20, 30, 40, 50, 60 };
		System.out.println(numbers[4]);

		System.out.println("Running for loop");

		for (int i = 0; i < numbers.length; i++) {
			System.out.println(numbers[i]);
		}

		System.out.println("SUM");

		int sum = 0;
		for (int i = 0; i < numbers.length; i++) {

			sum = sum + numbers[i];
			        
		}
		System.out.println(sum);

		
		
		// Program 4
		System.out.println(" ");
		System.out.println("Program 4");

		//split 
		
		String sentence ="I am learning java"; // "I","am","learning","java"
		String []sentence1=sentence.split(" ");
		
		
		for (int i=0; i<sentence1.length;i++) {
			System.out.println(sentence1[i]);
		}
		
		String [] sentence2=sentence.split("a"); //"I", "m le","rning j","v"
		
		for (int i=0;i<sentence2.length;i++) {
			System.out.println(sentence2[i]);
		}
		
		//Program 5 char array
		
		System.out.println("Char array");
		
		String city="Nagpur";
		char citya[]=city.toCharArray();
//		System.out.println(citya[1]);
		
		for (int i=0; i<citya.length;i++) {
			System.out.println(citya[i]);
		}
		
		//Program 6 
		System.out.println("for-each loop");
		int age[]= {15,20,25,30};
		
		for (int a:age) {
			System.out.println(a);
		}
		
		
		
	}

}
