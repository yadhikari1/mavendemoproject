package Two;

public class array1day5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// array

		int A[] = new int[5];
		A[0] = 10;
		A[1] = 100;
		A[2] = 1000;
		A[3] = 10000;
		A[4] = 100000;

		System.out.println(A[0]);
		System.out.println(A[1]);
		System.out.println(A[2]);
		System.out.println(A[3]);
		System.out.println(A[4]);

//		   	OR

		for (int i = 0; i < A.length; i++) {
			System.out.println(A[i]);
		}

		// printing all character based on index

		// 1 2 3 4 5
		// a p p l e

		String B = "banana";
		for (int i = 0; i < B.length(); i++) {
			System.out.println(B.charAt(i));
		}

		// length properties
		// program 3

		int num[] = new int[4];
		num[0] = 1;
		num[1] = 10;
		num[2] = 100;
		num[3] = 1000;

		System.out.println(num.length);
		for (int i = 0; i < num.length; i++) {
			System.out.println(num[i]);
		}

		// program 4
		String cities[] = new String[3];
		cities[0] = "Ilam";
		cities[1] = "Fikkal";
		cities[2] = "Birtamod";
		for (int i = 0; i < cities.length; i++) {
			System.out.println(cities[i]);

		}

		// Program 5

		int num1[] = { 1, 2, 3, 4, 5, 6 };
		for (int i = 0; i < num1.length; i++) {
			System.out.println(num1[i]);
		}

		// Program 6

		String Fruits[] = { "Banana", "apple", "orange", "Pinaple" };
		for (int i = 0; i < Fruits.length; i++) {
			System.out.println(Fruits[i]);
		}

		System.out.println(Fruits.length);

		char aa[] = { 'a', 'p', 'p', 'l', 'e' };
		for (int i = 0; i < aa.length; i++) {
			System.out.println(aa[i]);
		}
		// program 7

		String Firstname = "Yogendra";
		char[] nn = Firstname.toCharArray();
		for (int i = 0; i < nn.length; i++) {
			System.out.println(nn[i]);
		}

		//Program 8
		
		String e="I am learning java";
		String ra1[]=e.split(" ");
		
		String ra2[]=e.split("a");
		for (int i=0;i<ra1.length;i++) {
			System.out.println(ra1[i]);
		}
		for (int i=0;i<ra2.length;i++) {
			System.out.println(ra2[i]);
		}
		
		
		String I="I am learning language";
		String []II=I.split(" "); //"I", "am","learning","language"
		for (int i=0;i<II.length;i++) {
		System.out.println(II);}
	}

}
