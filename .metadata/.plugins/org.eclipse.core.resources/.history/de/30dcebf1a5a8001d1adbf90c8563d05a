		int Numbers[] = { 10, 20, 30, 40, 50, 60 };
		int sum1 = 0;
		float avg = 0;
		for (int d : Numbers) {
			System.out.println(d);
			sum1 = sum1 + d;
			avg = sum1 / Numbers.length;
		}
